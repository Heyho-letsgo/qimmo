<div class="container" xmlns="http://www.w3.org/1999/html">

  <%= form_for @agence do |a| %>

      <table class="table">
        <div class="row">
          <div class="col-lg-12">Coordonées de l'agence : <%= @agence.raison_sociale %></div>
        </div>
        <div class="row">
          <div class="col-lg-12"><%= a.text_field :raison_sociale, autofocus: true, placeholder: 'Raison sociale', :style => 'color:red; width:300px' %></div>
        </div>
        <div class="row">
          <div class="col-lg-2"><%= a.text_field :civilite, placeholder: 'Civilite' %></div>
          <div class="col-lg-2"><%= a.text_field :responsable, placeholder: 'Nom du responsable', :style => 'text_align:left' %></div>
          <div class="col-lg-2"><%= a.text_field :telephone, placeholder: 'Téléphone' %></div>
          <div class="col-lg-2"><%= a.text_field :tel_port, placeholder: 'Portable' %></div>
          <div class="col-lg-2"><%= a.text_field :email, placeholder: 'email' %></div>
          <div class="col-lg-2"></div>


        </div>
        <div class="row">
          <div class="col-lg-2"><%= a.text_field :num_voie, placeholder: 'numéro de voie' %></div>
          <div class="col-lg-2"><%= a.text_field :voie, placeholder: 'Voie' %></div>
          <div class="col-lg-2"><%= a.text_field :adresse, placeholder: 'adresse' %></div>
          <div class="col-lg-2"><%= a.text_field :cp, placeholder: 'Code postal' %></div>
          <div class="col-lg-2"><%= a.text_field :ville, placeholder: 'Ville' %></div>
          <div class="col-lg-2"><%= a.text_field :pays, placeholder: 'Pays' %></div>
        </div>

      </table>

      Rappeler le : | <%= a.text_field :rappelouinon %>
      <br> | le |<%= a.datetime_select :rappel %>|<br>

      <br>

      <%= a.submit %>

  <% end %>
</div>
