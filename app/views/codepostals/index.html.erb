<h1>Listing codepostals</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @codepostals.each do |codepostal| %>
      <tr>
        <td><%= codepostal.code %></td>
        <td><%= link_to 'Show', codepostal %></td>
        <td><%= link_to 'Edit', edit_codepostal_path(codepostal) %></td>
        <td><%= link_to 'Destroy', codepostal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

